{
  "env": {
    "es2021": true
  },
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,

    // Modules
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Language and Environment
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // Interop Constraints
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Projects
    "composite": true,

   /**
    * Custom config - reverse over time as codebase is cleaned up
    */

    "strictPropertyInitialization": false, // overwrites strict `true`
    "useUnknownInCatchVariables": false, // overwrites strcit `true`
    // "This setting is particularly recommended for Node.js projects that use mostly ESM, but have a select few CJS files. It is not recommended for projects that currently target CJS, but may want to target ESM in the future."
    // https://www.typescriptlang.org/docs/handbook/modules/theory.html#input-module-syntax
    // Details: https://github.com/microsoft/TypeScript/pull/52203
    // TODO: Ensure this is set to `false` for CJS and dual export package like the SDK
    "verbatimModuleSyntax": false

   /**
    * Explicitly define outDir and rootDir in each package since they
    * define package-specific dirs.
    */
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
