    "ethereum-block-by-date": "1.4.9",
    "ethers": "5.7.2",
    "keythereum": "1.2.0",
    "level": "8.0.1",
    "level-party": "5.1.1",
    "lodash": "4.17.21",
    "luxon": "3.4.4",
    "merkletreejs": "0.3.11",
    "minimist": "1.2.8",
    "mkdirp": "3.0.1",
    "nearest-date": "1.0.1",
    "p-queue": "8.0.1",
    "pidusage": "3.0.2",
    "prom-client": "15.1.0",
    "prompt": "1.3.0",
    "subleveldown": "6.0.1",
    "to-hex": "0.0.18",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/ethereum-block-by-date": "1.4.1",
    "@types/keythereum": "1.2.4",
    "@types/lodash": "4.14.202",
    "@types/luxon": "3.4.2",
    "@types/minimist": "1.2.5",
    "@types/pidusage": "2.0.5",
    "@types/prompt": "1.1.8",
    "@types/subleveldown": "4.1.4",
    "@types/uuid": "9.0.8",
    "eslint-plugin-jest": "28.2.0",
    "tsx": "4.7.2"
  },
  "homepage": "https://hop.exchange",
  "repository": {
    "type": "git",
    "url": "git://github.com/hop-protocol/hop.git",
