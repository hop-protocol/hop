{
  "name": "@hop-protocol/hop-node",
  "version": "0.0.1-beta.6",
  "description": "The Hop Node for Hop Protocol",
  "main": "dist/index.js",
  "engines": {
    "node": ">=14",
    "yarn": "^1.22.11"
  },
  "scripts": {
    "test": "jest test",
    "bonder": "npm run build && node bin/hop-node bonder",
    "arb-bot": "npm run build && node bin/hop-node arb-bot",
    "start": "npm run build-info && node bin/hop-node",
    "typecheck": "tsc",
    "dev": "npm run build-info && tsc -p tsconfig.build.json --watch",
    "build-info": "echo \"{\\\"rev\\\": \\\"${GIT_REV:-`git rev-parse --short HEAD`}\\\"}\" > src/.build-info.json",
    "postinstall": "mkdir -p dist/src && npm run build-info && cp src/.build-info.json dist/src/.build-info.json",
    "build": "npm run build-info && tsc -p tsconfig.build.json",
    "lint": "eslint --fix \"src/**/*\" \"test/**/*\"",
    "clean": "rimraf dist",
    "clean:arbitrum": "rimraf l2_nodes/arbitrum/data",
    "clean:db": "rimraf db_data",
    "lerna:sync": "lerna-sync-version",
    "version:bump": "npm version prerelease --preid=beta",
    "publish:latest": "npm publish --tag latest --access public",
    "publish:beta": "npm publish --tag beta --access public",
    "publish:next": "npm publish --tag next --access public",
    "dist-tag:latest": "npm dist-tag add \"@hop-protocol/hop-node@$(jq -r .version <package.json)\" latest",
    "dist-tag:beta": "npm dist-tag add \"@hop-protocol/hop-node@$(jq -r .version <package.json)\" beta",
    "dist-tag:next": "npm dist-tag add \"@hop-protocol/hop-node@$(jq -r .version <package.json)\" next",
    "release": "npm run clean && npm run publish:latest",
    "bump-release": "npm run version:bump && npm run lerna:sync && npm run release",
    "prepare": "npm run lint && npm run build"
  },
  "bin": {
    "hop-node": "bin/hop-node"
  },
  "author": "",
  "license": "MIT",
